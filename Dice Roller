import java.util.Random;
//This program was written by Hunter Clay >> Hunter.Clay@rockets.utoledo.edu
//Project 1 - Submitted 9/22/15
//This program simulates a die roll of two dies.
public class DiceRoller {
	public static void main(String [] args) {
		Random dice = new Random();
		int die1;
		int die2;
		
		for(int counter = 1; counter <= 6; counter++) {
			die1 = 1 + dice.nextInt(6);
			die2 = 1 + dice.nextInt(6);
			System.out.println(die1 + " and " + die2);
		}
	}
}
